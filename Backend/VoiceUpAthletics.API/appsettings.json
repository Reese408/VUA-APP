{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "<YOUR-ENTRA-TENANT-ID>",
    "ClientId": "<YOUR-API-APP-REGISTRATION-CLIENT-ID>",
    "Audience": "api://<YOUR-API-APP-REGISTRATION-CLIENT-ID>"
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:<your-server>.database.windows.net,1433;Initial Catalog=VoiceUpAthletics;Persist Security Info=False;User ID=<your-admin-user>;Password=<your-password>;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "https://<your-frontend-domain>.azurestaticapps.net"
    ]
  },

  "ApplicationInsights": {
    "ConnectionString": "<YOUR-APPLICATION-INSIGHTS-CONNECTION-STRING>"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
